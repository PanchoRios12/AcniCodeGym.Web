    <script>
        "use strict";
        var KTEmpleado = function () {
            var _handleClienteForm = function () {
                var validation;
                validation = FormValidation.formValidation(
                    KTUtil.getById('kt_Empleado'),
                    {
                        fields: {
                            FechaIngreso: {
                                validators: {
                                    notEmpty: {
                                        message: 'Seleccione la fecha de ingreso'
                                    }
                                }
                            },
                            Nombres: {
                                validators: {
                                    notEmpty: {
                                        message: 'El  nombre es requerido'
                                    }
                                }
                            },
                            Apellidos: {
                                validators: {
                                    notEmpty: {
                                        message: 'El  apellido es requerido'
                                    }
                                }
                            },
                            Cedula: {
                                validators: {
                                    notEmpty: {
                                        message: 'La cedula es requerido'
                                    }
                                }
                            },
                            Celular: {
