    <script>
        function crearEmpleado() {
            let FechaIngresoString = $("#kt_datepicker_Crear").val();
            var Nombres = $("#Nombres").val();
            var Apellidos = $("#Apellidos").val();
            var Cedula = $("#Cedula").val();
            var Celular = $("#Celular").val();
            var Direccion = $("#Direccion").val();
            var empleadoDto = {
                CodigoEmpleado:"00",
                FechaIngresoString: FechaIngresoString,
                Nombres: Nombres,
                Apellidos: Apellidos,
                Cedula: Cedula,
                Celular: Celular,
                Direccion: Direccion
            };
            $.ajax({
                type: 'POST',
                url: '@Url.Action("crearEmpleado", "Employee")',
                dataType: 'json',
                data: empleadoDto,
                async:false,
                success: function (data) {
                    swal.fire({
                        text: "se guardo correctamente",
                        icon: "success",
                        buttonsStyling: false,
                        confirmButtonText: "Entiendo!",
                        customClass: {
                            confirmButton: "btn font-weight-bold btn-light-primary"
                        }
                    }).then(function () {
                        KTUtil.scrollTop();
                    });
                },
                error: function (ex) {
                    swal.fire({
                        text: "error al guardar",
                        icon: "error",
                        buttonsStyling: false,
                        confirmButtonText: "Entiendo!",
                        customClass: {
                            confirmButton: "btn font-weight-bold btn-light-primary"
                        }
                    }).then(function () {
                        KTUtil.scrollTop();
                    });
                }
            });
        }
        function CerrarModal() {
            $('#EmpleadoModal').modal('toggle');
        }
        function Limpiar() {
            $("#kt_Empleado")[0].reset();
            reloadGrid();
        }
        function verRegistroEditar(id, Nombres, estado) {
            var url= '@Url.Action("obtenerEmpleadoPorId", "Employee")?Id='+id;
            $.get(url).done(function (data) {
                //Se modifican los valores al empleado
                $("#idEmpleadoEditar").val(data.id);
                $("#kt_datepicker_Editar").val(new Date(+("" + data.FechaIngreso).slice(6, 19)).toLocaleString('en-GB', { day: "2-digit",year: "numeric", month: "2-digit",  }).split("/").join("/")).trigger('change');
                $("#CodigoEmpleadoEditar").val(data.CodigoEmpleado);
                $("#NombreEditar").val(data.Nombres);
                $("#ApellidoEditar").val(data.Apellidos);
                $("#CedulaEditar").val(data.Cedula);
                $("#CelularEditar").val(data.Celular);
                $("#DireccionEditar").val(data.Direccion);
                $("#chkEstadoEmpleado").prop('checked', estado);
                $("#EmpleadoModalEditar").modal("show");
            })
        }
        function editarRegistro() {
            let FechaIngresoString = $("#kt_datepicker_Editar").val();
            var PersonaDto = {
                Id: $("#idEmpleadoEditar").val(),
                FechaIngresoString: FechaIngresoString,
                CodigoEmpleado: $("#CodigoEmpleadoEditar").val(),
                Nombres: $("#NombreEditar").val(),
                Apellidos:  $("#ApellidoEditar").val(),
                Cedula: $("#CedulaEditar").val(),
                Celular : $("#CelularEditar").val(),
                Direccion : $("#DireccionEditar").val(),
                Estado: $('#chkEstadoEmpleado').prop('checked')
            };
            $.ajax({
                type: 'POST',
                url: '@Url.Action("editarEmpleado", "Employee")',
                dataType: 'json',
                data: PersonaDto,
                async:false,
                success: function (data) {
                    swal.fire({
                        text: "se edito correctamente",
                        icon: "success",
                        buttonsStyling: false,
                        confirmButtonText: "Entiendo!",
                        customClass: {
                            confirmButton: "btn font-weight-bold btn-light-primary"
                        }
                    }).then(function () {
                        KTUtil.scrollTop();
                        reloadGrid();
                    });
                },
                error: function (ex) {
                    swal.fire({
                        text: "error al editar",
                        icon: "error",
                        buttonsStyling: false,
                        confirmButtonText: "Entiendo!",
                        customClass: {
                            confirmButton: "btn font-weight-bold btn-light-primary"
                        }
                    }).then(function () {
                        KTUtil.scrollTop();
                    });
                }
            });
        }
        function eliminarRegistro(id) {
            console.log(id);
            Swal.fire({
                title: "Esta seguro que desea borrar?",
                text: "Se desactivara el registro",
                icon: "warning",
                showCancelButton: true,
                confirmButtonText: "Eliminar",
                cancelButtonText: "Cancelar"
            }).then(function (result) {
                if (result.value) {
                    var jqXHR = $.ajax({
                            type: 'POST',
                            url: '@Url.Action("elminarEmpleado", "Employee")?Id='+id,
                            dataType: 'json',
                            async:false,
